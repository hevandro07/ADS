#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <math.h>
int main (){
	setlocale (LC_ALL,"");
	#define pi 3.14
	float raio, area, perimetro;
	printf("Digite o raio do círculo:");
	scanf("%f",&raio);
	if (raio>0){
			area = pi * (pow(raio,2));
			perimetro = 2 * pi * raio;
	printf("A área do círculo é:%f e o perimetro é:%f",area,perimetro);
	}else{
		printf("numero inválido!!");
	}
    return (0);
	}
